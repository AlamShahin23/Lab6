

package com.mycompany.employee;


public class Employee {
    
    
  String name,designation;
    int id ,salary;

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getDesignation() {
        return designation;
    }

    public void setDesignation(String designation) {
        this.designation = designation;
    }

    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public int getSalary() {
        return salary;
    }

    public void setSalary(int salary) {
        this.salary = salary;
    }
    
    
    


    public static void main(String[] args) {
      Employee p1=new Employee();
      Employee p2=new Employee()    ;
      
      
      
      p1.setName("Alex zarif");
      p1.setId(223);
      p1.setDesignation("MD");
      p1.setSalary(300000);
      System.out.println();
      
      
      p2.setName("ikra hasan");
      p2.setId(225);
      p2.setDesignation("Manager");
      p2.setSalary(25000);
      System.out.println();
      
      
      
     
    System.out.println("Name:"+p1.getName());    
    System.out.println("Designation:"+p1.getDesignation());    
    System.out.println("ID:"+p1.getId());    
    System.out.println("Salary:"+p1.getSalary());    
     System.out.println();   
    
    System.out.println("Name:"+p2.getName());    
    System.out.println("Designation:"+p2.getDesignation());    
    System.out.println("ID:"+p2.getId());    
    System.out.println("Salary:"+p2.getSalary());    
        
    
    
        
    
         
      
      
      
      
      
    }
}  
    
    
    
    
    
    
    
    
    

    
